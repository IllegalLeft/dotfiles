# System
#OPTIONS=windowtype:curses    <== Don't have :'(
OPTIONS=number_pad:1
OPTIONS=standout
OPTIONS=suppress_alert:3.4.3

# Names
OPTIONS=name:Sam
OPTIONS=catname:Sequoia,dogname:Peggy,horsename:Agro

# Gameplay
OPTIONS=autodig
OPTIONS=autopickup,pickup_types:$="/!?
OPTIONS=!fixinv

#Graphics
OPTIONS=boulder:0
OPTIONS=color
OPTIONS=hilite_pet
OPTIONS=lit_corridor
OPTIONS=showexp,showrace,showscore
OPTIONS=windowcolors:menu white/black message green/yellow status white/blue text white/black

