# System
OPTIONS=disclose: +i +a +v +g +c +o
#OPTIONS=windowtype:curses    <== Don't have :'(
OPTIONS=number_pad:1
OPTIONS=standout
OPTIONS=suppress_alert:3.4.3

# Names
OPTIONS=name:Sam
OPTIONS=catname:Sequoia,dogname:Peggy,horsename:Agro

# Gameplay
OPTIONS=autodig
OPTIONS=autopickup,pickup_types:$="/!?
OPTIONS=!fixinv

#Graphics
OPTIONS=boulder:0
OPTIONS=color
OPTIONS=menucolors
MENUCOLOR="blessed"=green&bold
MENUCOLOR="holy"=green&bold
MENUCOLOR="cursed"=red
MENUCOLOR="unholy"=red
OPTIONS=hilite_pet
OPTIONS=hilite_pile
OPTIONS=lit_corridor
OPTIONS=showexp,showrace,showscore
OPTIONS=windowcolors:menu white/black message green/yellow status white/blue text white/black

# For more information on what you can set in your nethackrc file, refer to:
#   http://www.nethack.org/v343/Guidebook.html#_TOCentry_42
